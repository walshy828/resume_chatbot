# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production-use-32-random-bytes
FLASK_ENV=development

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Database
DATABASE_URI=sqlite:///chatbot.db

# Admin Credentials (change in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_in_production

# Default Admin Credentials (Default - Change on first login)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=changeme123

# Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Security Settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_LIFETIME=3600  # Session timeout in seconds (1 hour)

# CORS Configuration (comma-separated list of allowed origins)
# IMPORTANT: In production, set this to your actual domain(s) only!
# This protects against Cross-Site WebSocket Hijacking (CSWSH)
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:8181,http://127.0.0.1:8181

BCRYPT_LOG_ROUNDS=14  # Password hashing rounds (higher = more secure but slower)
MAX_LOGIN_ATTEMPTS=5  # Failed attempts before account lockout
ACCOUNT_LOCKOUT_DURATION=30  # Lockout duration in minutes

# Rate Limiting (use Redis in production for better performance)
RATELIMIT_STORAGE_URL=memory://  # Use redis://localhost:6379 in production


